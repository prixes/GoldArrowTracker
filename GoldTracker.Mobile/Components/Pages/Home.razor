@page "/"

<MudText Typo="Typo.h4" GutterBottom="true">Gold Arrow Tracker</MudText>
<MudText Typo="Typo.subtitle1" Class="mb-4">AI-powered archery scoring companion!</MudText>

<MudGrid Spacing="3">
    <MudItem xs="12" sm="6">
        <MudCard Elevation="0" Class="pa-4 glass-panel" Style="height: 100%; transition: transform 0.2s;">
            <MudCardActions Class="d-flex justify-center py-6">
                <MudButton ButtonType="ButtonType.Button" OnClick="NavigateToCapture" Variant="Variant.Text" Class="flex-grow-1 h-100">
                    <div class="d-flex flex-column align-center gap-3">
                        <MudAvatar Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large" Class="mb-2" Style="width: 80px; height: 80px; box-shadow: 0 4px 15px rgba(0,0,0,0.3);">
                            <MudIcon Icon="@Icons.Material.Filled.Camera" Size="Size.Large" Style="font-size: 3rem;" />
                        </MudAvatar>
                        <MudText Typo="Typo.h5" Class="text-white font-weight-bold">Capture Target</MudText>
                        <MudText Typo="Typo.body2" Align="Align.Center" Class="text-white-dim px-4">
                            Auto-detect arrows and score your target instantly using AI Vision.
                        </MudText>
                    </div>
                </MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="6">
        <MudCard Elevation="0" Class="pa-4 glass-panel" Style="height: 100%; transition: transform 0.2s;">
            <div class="d-flex flex-column align-center py-6 gap-3">
                 <MudAvatar Color="Color.Secondary" Variant="Variant.Filled" Size="Size.Large" Class="mb-2" Style="width: 80px; height: 80px; box-shadow: 0 4px 15px rgba(0,0,0,0.3);">
                    <MudIcon Icon="@Icons.Material.Filled.History" Size="Size.Large" Style="font-size: 3rem;" />
                </MudAvatar>
                <MudText Typo="Typo.h5" Class="text-white font-weight-bold">History</MudText>
                <MudText Typo="Typo.body2" Align="Align.Center" Class="text-white-dim px-4">
                    Review past sessions, track your progress, and analyze shooting patterns.
                </MudText>
            </div>
        </MudCard>
    </MudItem>
</MudGrid>

